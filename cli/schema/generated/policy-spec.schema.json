{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/PolicySpec",
  "definitions": {
    "PolicySpec": {
      "type": "object",
      "properties": {
        "meta": {
          "$ref": "#/definitions/MetaSpec"
        },
        "inputs": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/InputSpec"
          }
        },
        "scanners": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ScannerSpec"
          }
        },
        "rules": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/RuleSpec"
          }
        },
        "actions": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ActionSpec"
          }
        }
      },
      "required": [
        "meta",
        "scanners",
        "rules"
      ],
      "additionalProperties": false
    },
    "MetaSpec": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policyFormatVersion": {
          "type": "string",
          "enum": [
            "1.0.0"
          ]
        }
      },
      "required": [
        "name",
        "author",
        "policyFormatVersion"
      ],
      "additionalProperties": false
    },
    "InputSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "String",
            "Number",
            "Boolean"
          ]
        },
        "description": {
          "type": "string"
        },
        "default": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "default"
      ],
      "additionalProperties": false
    },
    "ScannerSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "uses": {
          "type": "string"
        },
        "main": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "uses",
        "main"
      ],
      "additionalProperties": false
    },
    "RuleSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "uses": {
          "type": "string"
        },
        "main": {
          "type": "string"
        },
        "meta": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "deprecated": {
              "type": "boolean"
            }
          },
          "required": [
            "type",
            "description",
            "category",
            "deprecated"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "type",
        "uses",
        "main",
        "meta"
      ],
      "additionalProperties": false
    },
    "ActionSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "uses": {
          "type": "string"
        },
        "main": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "uses",
        "main"
      ],
      "additionalProperties": false
    }
  }
}
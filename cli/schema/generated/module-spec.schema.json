{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ModuleSpec",
  "definitions": {
    "ModuleSpec": {
      "type": "object",
      "properties": {
        "meta": {
          "$ref": "#/definitions/MetaSpec"
        },
        "inputs": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/InputSpec"
          }
        },
        "policies": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/PolicyConfig"
          }
        }
      },
      "required": [
        "policies"
      ],
      "additionalProperties": false
    },
    "MetaSpec": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policyFormatVersion": {
          "type": "string",
          "enum": [
            "1.0.0"
          ]
        }
      },
      "required": [
        "name",
        "author",
        "policyFormatVersion"
      ],
      "additionalProperties": false
    },
    "InputSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "String",
            "Number",
            "Boolean"
          ]
        },
        "description": {
          "type": "string"
        },
        "default": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "default"
      ],
      "additionalProperties": false
    },
    "PolicyConfig": {
      "type": "object",
      "properties": {
        "uses": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "with": {
          "type": "object"
        }
      },
      "required": [
        "uses",
        "version"
      ],
      "additionalProperties": false
    }
  }
}